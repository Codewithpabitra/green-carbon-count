<!DOCTYPE html>
<html>
<head>
  <title>AI Insights</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col items-center justify-center bg-gradient-to-b from-green-100 via-white to-green-100">
  <div class="w-full max-w-lg bg-white p-8 rounded-2xl shadow-lg">
    <h2 class="text-2xl font-bold mb-6 text-center">Car Travel Input</h2>
    <form action="/aiinsights" method="POST" class="space-y-4">
      <div>
        <label class="block mb-1">Total Cars:</label>
        <input type="number" name="totalCars" required class="w-full border rounded-lg p-2"/>
      </div>

      <div>
        <label class="block mb-1">Type of Car:</label>
        <select name="carType" required class="w-full border rounded-lg p-2">
          <option value="electric">Electric</option>
          <option value="petrol">Petrol</option>
          <option value="diesel">Diesel</option>
        </select>
      </div>

      <div>
        <label class="block mb-1">Persons Per Car:</label>
        <input type="number" name="personsPerCar" required class="w-full border rounded-lg p-2"/>
      </div>

      <div>
        <label class="block mb-1">Total Persons Traveling:</label>
        <input type="number" name="totalPersons" required class="w-full border rounded-lg p-2"/>
      </div>

      <button type="submit" class="w-full bg-green-600 text-white py-2 rounded-lg hover:bg-green-700">
        Get Insights
      </button>
    </form>

    <% if (analysis) { %>
      <div class="mt-6 p-6 bg-green-50 border-l-4 border-green-500 rounded-xl shadow">
        <h3 class="font-semibold mb-2">Analysis:</h3>
        <ul class="list-disc pl-5 space-y-1">
          <% analysis.forEach(item => { %>
            <li><%= item %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>

    <% if (aiInsights) { %>
      <div class="mt-6 p-6 bg-blue-50 border-l-4 border-blue-500 rounded-xl shadow">
        <h3 class="font-semibold mb-2">AI Insights:</h3>
        <p><%= aiInsights %></p>
      </div>
    <% } %>
  </div>
</body>
</html>
