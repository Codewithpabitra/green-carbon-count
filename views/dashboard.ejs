<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sensor Dashboard</title>
  <!-- Tailwind CSS CDN -->
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen relative">

  <!-- Header -->
  <header class="bg-green-600 text-white p-6 shadow-md">
    <h1 class="text-3xl font-bold">ðŸŒ¿ Sensor Dashboard</h1>
    <p class="text-green-200 mt-1">Monitor your ESP32 sensor data in real-time</p>
  </header>

  <!-- Cards Section -->
  <section class="p-6 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mt-6">
    <% if (sensorData.length > 0) { 
        const latest = sensorData[0]; 
        const carbonFootprint = ((latest.air_quality || 0) + (latest.weight || 0) + (latest.energy || 0) + (latest.flow_rate || 0)) * 0.7;
    %>
      <div class="bg-white rounded-xl shadow p-5 hover:scale-105 transition transform">
        <h2 class="text-gray-500 font-semibold">Temperature</h2>
        <p class="text-2xl font-bold text-red-500 mt-2"><%= latest.temperature %> Â°C</p>
      </div>
      <div class="bg-white rounded-xl shadow p-5 hover:scale-105 transition transform">
        <h2 class="text-gray-500 font-semibold">Humidity</h2>
        <p class="text-2xl font-bold text-blue-500 mt-2"><%= latest.humidity %> %</p>
      </div>
      <div class="bg-white rounded-xl shadow p-5 hover:scale-105 transition transform">
        <h2 class="text-gray-500 font-semibold">Air Quality(ppm CO<sub>2</sub>e)</h2>
        <p class="text-2xl font-bold text-yellow-500 mt-2"><%= latest.air_quality %> AQI</p>
      </div>
      <div class="bg-white rounded-xl shadow p-5 hover:scale-105 transition transform">
        <h2 class="text-gray-500 font-semibold">Waste</h2>
        <p class="text-2xl font-bold text-purple-500 mt-2"><%= latest.weight %> kg</p>
      </div>
      <div class="bg-white rounded-xl shadow p-5 hover:scale-105 transition transform">
        <h2 class="text-gray-500 font-semibold">Carbon Footprint CO<sub>2</sub>e</h2>
        <p class="text-2xl font-bold text-green-600 mt-2"><%= carbonFootprint.toFixed(2) %> ðŸŒ±</p>
      </div>
  <% } else { %>
      <p class="text-gray-500 col-span-4 text-center">No data available</p>
  <% } %>
  </section>

  <!-- Detailed Table Section -->
  <section class="p-6 mt-6">
    <h2 class="text-xl font-semibold mb-4 text-gray-700">Recent Sensor Data</h2>
    <div class="overflow-x-auto">
      <table class="min-w-full bg-white rounded-lg shadow overflow-hidden">
        <thead class="bg-green-600 text-white">
          <tr>
            <th class="px-4 py-2 text-left">Timestamp</th>
            <th class="px-4 py-2 text-left">Temp (Â°C)</th>
            <th class="px-4 py-2 text-left">Humidity (%)</th>
            <th class="px-4 py-2 text-left">Air Quality(in ppm CO<sub>2</sub>)</th>
            <th class="px-4 py-2 text-left">Waste (kg)</th>
            <th class="px-4 py-2 text-left">Voltage (V)</th>
            <th class="px-4 py-2 text-left">Current (A)</th>
            <th class="px-4 py-2 text-left">Power (W)</th>
            <th class="px-4 py-2 text-left">Energy (Wh)</th>
            <th class="px-4 py-2 text-left">Flow Rate</th>
            <th class="px-4 py-2 text-left">Carbon Footprint</th>
          </tr>
        </thead>
        <tbody>
          <% sensorData.forEach(data => { 
              const carbonFootprint = ((data.air_quality || 0) + (data.weight || 0) + (data.energy || 0) + (data.flow_rate || 0)) * 0.7;
          %>
            <tr class="border-b hover:bg-gray-100 transition">
              <td class="px-4 py-2"><%= new Date(data.timestamp).toLocaleString() %></td>
              <td class="px-4 py-2"><%= data.temperature %></td>
              <td class="px-4 py-2"><%= data.humidity %></td>
              <td class="px-4 py-2"><%= data.air_quality %></td>
              <td class="px-4 py-2"><%= data.weight %></td>
              <td class="px-4 py-2"><%= data.voltage %></td>
              <td class="px-4 py-2"><%= data.current %></td>
              <td class="px-4 py-2"><%= data.power %></td>
              <td class="px-4 py-2"><%= data.energy %></td>
              <td class="px-4 py-2"><%= data.flow_rate %></td>
              <td class="px-4 py-2 font-bold text-green-600"><%= carbonFootprint.toFixed(2) %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-gray-800 text-white text-center py-4 mt-10 w-full">
    &copy; <%= new Date().getFullYear() %> ESP32 Dashboard. All rights reserved.
  </footer>

</body>
</html>
