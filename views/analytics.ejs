<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Analytics Dashboard</title>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css" rel="stylesheet">
</head>
<body class="bg-gray-100 text-gray-800 p-[40px]">

    

  <div class="max-w-5xl mx-auto p-6">
    <a href="/" class="px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 mb-5"><i class="ri-arrow-left-line mr-2  " ></i>back to home</a>
    <h1 class="text-3xl font-bold mb-2 mt-5">Analytics Dashboard</h1>
    <p class="mb-6 text-gray-600">
      Upload your CSV file to generate insights and visual analytics powered by Gemini AI.
    </p>

    <!-- File Upload Form -->
    <form id="uploadForm" enctype="multipart/form-data" method="POST" action="/analytics/upload" class="mb-6">
      <input type="file" name="csvFile" accept=".csv" required class="mb-4">
      <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
        Upload & Analyze
      </button>
    </form>

    <!-- Insights Section -->
    <div id="insights" class="mb-6 hidden">
      <h2 class="text-2xl font-semibold mb-2">Insights</h2>
      <p id="insightText" class="bg-white p-4 rounded shadow"></p>
    </div>

    <!-- Chart Section -->
    <div id="chartSection" class="hidden">
      <h2 class="text-2xl font-semibold mb-4">Analytics Visualization</h2>
      <canvas id="analyticsChart" class="bg-white p-4 rounded shadow"></canvas>
    </div>
  </div>

  <script>
    async function fetchInsights() {
      const res = await fetch('/analytics/data');
      const data = await res.json();

      if (data.insights) {
        document.getElementById("insights").classList.remove("hidden");
        document.getElementById("insightText").innerText = data.insights;
      }

      if (data.chartData) {
        document.getElementById("chartSection").classList.remove("hidden");
        const ctx = document.getElementById('analyticsChart').getContext('2d');
        new Chart(ctx, {
          type: 'bar',
          data: {
            labels: data.chartData.labels,
            datasets: [{
              label: 'Values',
              data: data.chartData.values,
              backgroundColor: 'rgba(54, 162, 235, 0.6)'
            }]
          }
        });
      }
    }

    // Run on page load
    fetchInsights();
  </script>
</body>
</html>
